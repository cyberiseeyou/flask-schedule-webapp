# Flask Schedule Webapp Environment Configuration
# Copy this file to .env and configure for your environment

# ===================================================================
# FLASK SETTINGS
# ===================================================================
# CRITICAL: Generate a secure random key for production
# Example: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-secret-key-here-CHANGE-IN-PRODUCTION

# Environment: development, testing, production
FLASK_ENV=development

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
# SQLite (Development/Small deployments)
DATABASE_URL=sqlite:///instance/scheduler.db

# PostgreSQL (Production - Recommended for enterprise deployments)
# DATABASE_URL=postgresql://username:password@localhost:5432/scheduler_db

# Database Connection Pool Settings (Production only)
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_MAX_OVERFLOW=20

# ===================================================================
# EXTERNAL API CONFIGURATION (Crossmark Authentication)
# ===================================================================
EXTERNAL_API_BASE_URL=https://crossmark.mvretail.com
EXTERNAL_API_USERNAME=your-crossmark-username
EXTERNAL_API_PASSWORD=your-crossmark-password
EXTERNAL_API_TIMEZONE=America/Indiana/Indianapolis
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_MAX_RETRIES=3
EXTERNAL_API_RETRY_DELAY=1
SESSION_REFRESH_INTERVAL=3600

# ===================================================================
# WALMART RETAIL LINK EDR SETTINGS
# ===================================================================
# REQUIRED: Walmart EDR credentials for report generation
WALMART_EDR_USERNAME=your-walmart-edr-username
WALMART_EDR_PASSWORD=your-walmart-edr-password
WALMART_EDR_MFA_CREDENTIAL_ID=your-mfa-credential-id

# ===================================================================
# SECURITY SETTINGS (Production)
# ===================================================================
# Session cookie security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# CSRF Protection
WTF_CSRF_TIME_LIMIT=3600

# Settings encryption key (for encrypted database fields)
# SETTINGS_ENCRYPTION_KEY=your-encryption-key-here

# Rate Limiting
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100 per hour

# ===================================================================
# SYNC SETTINGS
# ===================================================================
SYNC_ENABLED=false
SYNC_INTERVAL_MINUTES=15
SYNC_BATCH_SIZE=50

# ===================================================================
# LOGGING CONFIGURATION
# ===================================================================
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=scheduler.log

# ===================================================================
# GUNICORN SETTINGS (Production WSGI Server)
# ===================================================================
GUNICORN_BIND=0.0.0.0:8000
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=gevent
GUNICORN_TIMEOUT=120
GUNICORN_LOG_LEVEL=info
GUNICORN_ACCESS_LOG=-
GUNICORN_ERROR_LOG=-

# ===================================================================
# PERFORMANCE SETTINGS
# ===================================================================
SEND_FILE_MAX_AGE_DEFAULT=31536000