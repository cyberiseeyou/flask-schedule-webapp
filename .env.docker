# Docker Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_ENV=production
FLASK_APP=scheduler_app/app.py
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration (SQLite - default)
SQLALCHEMY_DATABASE_URI=sqlite:///instance/scheduler.db

# PostgreSQL Configuration (uncomment to use PostgreSQL instead of SQLite)
# SQLALCHEMY_DATABASE_URI=postgresql://scheduler:scheduler_password@db:5432/scheduler_db

# Walmart EDR Credentials (optional)
WALMART_EDR_USERNAME=
WALMART_EDR_PASSWORD=
WALMART_EDR_MFA_CREDENTIAL_ID=

# Encryption Key for System Settings
SETTINGS_ENCRYPTION_KEY=

# Crossmark API Configuration (optional)
CROSSMARK_API_BASE_URL=https://crossmark.mvretail.com
CROSSMARK_USERNAME=
CROSSMARK_PASSWORD=

# Celery Configuration (optional - for background tasks)
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO
